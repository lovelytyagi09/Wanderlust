<% if (success && success.length > 0) { %>
    <div class="alert alert-primary alert-dismissible fade show col-6 offset-3">
        <%= success %>
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if (error && error.length > 0) { %>
    <div class="alert alert-warning alert-dismissible fade show col-6 offset-3">
        <%= error %>
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>